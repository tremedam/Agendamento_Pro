# =============================================
# CONFIGURAÇÃO DE AMBIENTE
# Copie este arquivo para .env e configure
# =============================================

# Ambiente de execução
NODE_ENV=development

# ========== CONFIGURAÇÃO DO BANCO DE DADOS DA EMPRESA ==========
# SUBSTITUA pelos dados do seu banco corporativo

# MySQL/MariaDB
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=sua_senha_aqui
DB_NAME=agenda_mercadorias

# OU PostgreSQL
# DB_TYPE=postgresql
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=sua_senha_aqui
# DB_NAME=agenda_mercadorias

# OU SQL Server
# DB_TYPE=mssql
# DB_HOST=localhost
# DB_PORT=1433
# DB_USER=sa
# DB_PASSWORD=sua_senha_aqui
# DB_NAME=agenda_mercadorias

# ========== CONFIGURAÇÃO DO SERVIDOR ==========
PORT=3000
API_BASE_URL=http://localhost:3000

# ========== CONFIGURAÇÃO DE SEGURANÇA ==========
JWT_SECRET=seu_jwt_secret_super_secreto_aqui_123456
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=10

# ========== CONFIGURAÇÃO DE LOGS ==========
LOG_LEVEL=debug
LOG_FILE=logs/agenda.log

# ========== CONFIGURAÇÃO DE CORS ==========
CORS_ORIGIN=http://localhost:5500,http://127.0.0.1:5500,http://localhost:3000

# ========== CONFIGURAÇÃO DE UPLOAD ==========
UPLOAD_MAX_SIZE=10mb
UPLOAD_PATH=uploads/

# ========== CONFIGURAÇÃO DE EMAIL (Opcional) ==========
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_de_app
EMAIL_FROM=sistema@example.com

# ========== CONFIGURAÇÃO ESPECÍFICA DA EMPRESA ==========
# Configure conforme seu ambiente corporativo

EMPRESA_CODIGO=001
EMPRESA_NOME=SUA_EMPRESA
EMPRESA_CNPJ=12.345.678/0001-90

# Sistema legado (se existir)
SISTEMA_LEGADO_HOST=seu_servidor_antigo
SISTEMA_LEGADO_DB=banco_antigo
SISTEMA_LEGADO_USER=usuario_legado
SISTEMA_LEGADO_PASS=senha_legado
